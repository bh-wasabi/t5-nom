{{#define id="datosTerapiaIntensiva"}}
  {{#section id="base"}}
    {{validator type="expr" validIf="=!@diasTerapiaIntermedia||(@diasTerapiaIntermedia>=0&&@diasTerapiaIntermedia<=90)||@diasTerapiaIntermedia==99" message="Días Terapia Intermedia Inválidos"}}
    {{validator type="expr" validIf="=!@horasTerapiaIntermedia||(@horasTerapiaIntermedia>=0&&@horasTerapiaIntermedia<=23)||@horasTerapiaIntermedia==99" message="Horas Terapia Intermedia Inválidas"}}
    {{validator type="expr" notValidIf="@diasTerapiaIntermedia=='0'&&@horasTerapiaIntermedia<1" message="Horas Terapia Intermedia Inválidas"}}
  {{/section}}
{{/define}}