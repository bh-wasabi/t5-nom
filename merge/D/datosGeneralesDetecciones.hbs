{{#define id="datosGeneralesDetecciones"}}
  {{#section id="base"}}
    {{field id="siEdadCuidador" type="expr" value="=calc.in(@edadCuidador,['20edad','2059edad','60mas'])"}}
    {{field id="esMayor20" type="expr" value="=moment(@_parentDoc.base.fechaAtencion).diff(@_parentDoc.persona.fechaNacimiento,'years')>20"}}
    {{field id="esMayor50" type="expr" value="=moment(@_parentDoc.base.fechaAtencion).diff(@_parentDoc.persona.fechaNacimiento,'years')>50"}}
    {{field id="esMayor60" type="expr" value="=moment(@_parentDoc.base.fechaAtencion).diff(@_parentDoc.persona.fechaNacimiento,'years')>60"}}
    {{#field id="edadCuidador"}}
      {{onChange clearFields="sexoCuidador"}}
    {{/field}}
    {{validator type="expr" notValidIf="=!esMayor60&&siEdadCuidador" message="Edad Cuidador Inválida (Sólo Mayores de 60 Años)"}}
  {{/section}}
{{/define}}
