{{#define id="datosInfeccionesRespiratoriasAgudasSis"}}
  {{#section id="base"}}
    {{#field id="presentaInfeccionAguda"}}
      {{onChange clearFields="planTratamiento,neumonia"}}
    {{/field}}
    {{#field id="planTratamiento"}}
      {{onChange clearFields="neumonia"}}
    {{/field}}
    {{validator type="expr" notValidIf="=presentaInfeccionAguda=='noAplica'&&planTratamiento!='noAplica'" message="Plan Tratamiento Inválido"}}
    {{validator type="expr" notValidIf="=presentaInfeccionAguda=='noAplica'&&neumonia!='noAplica'" message="Neumonia Inválido"}}
  {{/section}}
{{/define}}