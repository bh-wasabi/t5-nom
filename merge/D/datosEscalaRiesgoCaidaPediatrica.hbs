{{#define id="datosEscalaRiesgoCaidaPediatrica"}}
  {{#section id="base"}}
    {{field id="total" type="calc" value="=calc.sumArgs(calc.sumCase(limitacionFisicaPediatrico,'limitacionFisicaPediatrica'),calc.sumCase(estadoMentalAlteradoPediatrico,'estadoMentalAlteradoPediatrico'),calc.sumCase(tratamientoFarmacologicoPediatrico,'tratamientoFarmacologicoPediatrico'),calc.sumCase(problemaComunicacionPediatrico,'problemaComunicacionPediatrico'),calc.sumCase(sinFactoresRiesgoPediatrico,'sinFactoresRiesgoPediatrico'))"}}
    {{field id="nivelRiesgoCaidaPediatrico" type="expr" value="=total==0||total==1?'Bajo Riesgo':total==2||total==3?'Riesgo Moderado':total>=4?'Alto Riesgo':''"}}
  {{/section}}
{{/define}}

