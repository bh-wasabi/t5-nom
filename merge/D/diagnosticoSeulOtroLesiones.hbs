{{#define id="diagnosticoSeulOtroLesiones"}}
  {{#section id="base" confirm="=fn('confirmarLimiteEdad',excedeLimiteEdad)" confirmTitle="Confirmación" confirmMessage="No Corresponde la Edad del Paciente<br>¿Desea Continuar?"}}
    {{field id="tieneCausaExterna" type="expr" value="=calc.in('CAUSA',calc.splitAndTrim(requiereCampos))&&calc.in(docType,['notaTempEgresos','notaSeulEgreso','notaTempLesiones','notaSeulLesiones'])"}}
    {{field id="tieneMorfologia" type="expr" value="=calc.in('MORFOLOGIA',calc.splitAndTrim(requiereCampos))&&calc.in(docType,['notaTempEgresos','notaSeulEgreso'])"}}
    {{field id="tieneFolioLesion" type="expr" value="=calc.in('FOLIO_LESION',calc.splitAndTrim(requiereCampos))&&calc.in(docType,['notaTempEgresos','notaSeulEgreso'])"}}
    {{field id="tienePlanHidratacion" type="expr" value="=calc.in('PLAN_HIDRATACION',calc.splitAndTrim(requiereCampos))&&edadActual<5&&calc.in(docType,['notaTempUrgencias','notaInicialUrgencias','notaAltaServicio','notaEvolucion'])"}}
    {{field id="tienePlanInfeccionesRespiratorias" type="expr" value="=calc.in('PLAN_RESPIRATORIAS',calc.splitAndTrim(requiereCampos))&&edadActual<5&&calc.in(docType,['notaTempUrgencias','notaInicialUrgencias','notaAltaServicio','notaEvolucion'])"}}
    {{#field id="diagnostico"}}
      {{#editor}}
        {{param esSeul="=true"}}
        {{param esOtro="=true"}}
        {{param _type="=_parentDoc._type"}}
        {{param edadActual="=_parentDoc.persona.edadActual"}}
      {{/editor}}
      {{#onChange clearFields="subDiagnostico,detalle,causaExterna,morfoligia,folioLesion"}}
        {{set letra="=LETRA"}}
        {{set limiteSexo="=LSEX"}}
        {{set limiteInferior="=LINF"}}
        {{set limiteSuperior="=LSUP"}}
        {{set excedeLimiteEdad="=calc.meetsAgeLimit(LINF, null, _parentDoc.persona.fechaNacimiento, true, moment(_parentDoc.base.fechaAtencion).format('YYYY-MM-DD'), _parentDoc.nomDatos.desconoceFechaNacimiento=='si')&&calc.meetsAgeLimit(LSUP, null, _parentDoc.persona.fechaNacimiento, false, moment(_parentDoc.base.fechaAtencion).format('YYYY-MM-DD'), _parentDoc.nomDatos.desconoceFechaNacimiento=='si')?'NO':'SI'"}}
        {{set excedeLimiteSexo="=calc.meetsSexLimitSeul(LSEX, _parentDoc.persona.genero)?'NO':'SI'"}}
        {{set claveCapitulo="=CLAVE_CAPITULO"}}
        {{set validoLesiones="=VALIDO_LESIONES"}}
        {{set validoEgresos="=VALIDO_EGRESOS"}}
        {{set validoSeul="=VALIDO_SEUL"}}
        {{set tipoProducto="=TIPO_PRODUCTO"}}
        {{set tipoNacimiento="=TIPO_NACIMIENTO"}}
        {{set docType="=_parentDoc._type"}}
        {{set edadActual="=_parentDoc.persona.edadActual"}}
        {{set requiereCampos="=REQUIERE_CAMPOS"}}
      {{/onChange}}
    {{/field}}
    {{validator type="expr" validIf="=@detalle.length>1" message="Descripción (Mínimo 2 Caracteres)"}}
    {{validator type="expr" validIf="=calc.matchIfPattern('^[A-ZÑ].*',@detalle)" message="Descripción debe iniciar con caracter alfabético"}}
    {{validator type="expr" notValidIf="=limiteSexo!='NO'&&_parentDoc.persona.genero=='intersexual'" message="Diagnóstico Incorrecto para Intersexual"}}
    {{validator type="expr" notValidIf="=limiteSexo=='HOMBRE'&&_parentDoc.persona.genero=='mujer'" message="Diagnóstico Incorrecto para Mujer"}}
    {{validator type="expr" notValidIf="=limiteSexo=='MUJER'&&_parentDoc.persona.genero=='hombre'" message="Diagnóstico Incorrecto para Hombre"}}
    {{validator type="expr" notValidIf="=claveCapitulo=='XV'&&calc.in(_parentDoc.persona.genero,['noEspecificado','seIgnora'])" message="Diagnóstico Incorrecto para Sexo No Especificado"}}
  {{/section}}
{{/define}}