  {{param startOnOpen="lotes"}}
  {{param addClass="w70"}}
  {{action id="afectar" error="=base.costoUnitario?null:'Costo Unitario Incorrecto'"}}
  {{!-- {{param removeIfEmptySection="lotes"}}
