{{#define id="notaSisConsultaExterna"}}
  {{#action 
    id="afectar"
    confirm="=calc.in('SI', _.union(calc.pluckRef([_doc.analisis.afeccionPrincipal], 'base.excedeLimiteEdad'),calc.pluckRef(_doc.analisis.otrosDiagnosticos, 'base.excedeLimiteEdad'),calc.pluckRef([_doc.analisis.afeccionPrincipal], 'base.excedeLimiteSexo'),calc.pluckRef(_doc.analisis.otrosDiagnosticos, 'base.excedeLimiteSexo')))"
    confirmMessage="Diagnóstico Excede Límite Edad o Sexo<br>¿Desea continuar?"
    error="=fn('validarConsultaExternaProcesar', exploracion, analisis)"
  }}
    {{#update section="base"}}
      {{set excedeLimiteEdad="=calc.in('SI', _.union(calc.pluckRef([_doc.analisis.afeccionPrincipal], 'base.excedeLimiteEdad'),calc.pluckRef(_doc.analisis.otrosDiagnosticos, 'base.excedeLimiteEdad')))?'SI':'NO'"}}
      {{set excedeLimiteSexo="=calc.in('SI', _.union(calc.pluckRef([_doc.analisis.afeccionPrincipal], 'base.excedeLimiteSexo'),calc.pluckRef(_doc.analisis.otrosDiagnosticos, 'base.excedeLimiteSexo')))?'SI':'NO'"}}
    {{/update}}
  {{/action}}
  
  {{#section id="base"}}
    {{#field id="tieneAlgunaAlergia"}}
      {{onChange clearFields="alergia"}}
    {{/field}}
  {{/section}}

  {{#section id="mujer"}}
    {{#field id="condicion"}}
      {{onChange clearFields="datosEmbarazoActual,datosEmbarazoActualAvanzados"}}
    {{/field}}
    {{#field id="fechaUltimaMenstruacion"}}
      {{#onChange}}
        {{set fechaProbableParto="=fn('fechaProbableParto', fechaUltimaMenstruacion)"}}
      {{/onChange}}
    {{/field}}
    {{#field id="condicion"}}
      {{onChange clearFields="atencionPregestacional,registroPregestacional,puerperaAtencion,infeccionPuerperio"}}
    {{/field}}
  {{/section}}

  {{#section id="analisis"}}
    {{#field id="consultaNinoSano"}}
      {{onChange clearFields="saludNino,cancerMenores,enfermedadesDiarreicasAgudas,infeccionesRespiratoriasAgudas"}}
    {{/field}}
    {{#field id="telemedicina"}}
      {{onChange clearFields="teleconsulta,estudiosTeleconsulta,modalidad"}}
    {{/field}}
    {{#field id="teleconsulta"}}
      {{#onChange}}
        {{set modalidad="=@teleconsulta=='si'?'Tiempo Real':''"}}
        {{set modalidad="=@teleconsulta=='no'&&calc.isNotEmpty(estudiosTeleconsulta)?'Diferida':modalidad"}}
        {{set modalidad="=@teleconsulta=='no'&&calc.in(estudiosTeleconsulta,['noAplica'])?'No Aplica':modalidad"}}
      {{/onChange}}
    {{/field}}
    {{#field id="estudiosTeleconsulta"}}
      {{#onChange}}
        {{set modalidad="=@teleconsulta=='si'?'Tiempo Real':''"}}
        {{set modalidad="=@teleconsulta=='no'&&calc.isNotEmpty(estudiosTeleconsulta)?'Diferida':modalidad"}}
        {{set modalidad="=@teleconsulta=='no'&&calc.in(estudiosTeleconsulta,['noAplica'])?'No Aplica':modalidad"}}
      {{/onChange}}
    {{/field}}
    {{#field id="contrarreferido"}}
      {{onChange clearFields="referidoPor"}}
    {{/field}}

    {{#onChange}}
      {{#update section="base"}}
        {{set diagnostico="=calc.mergeArrays(@afeccionPrincipal,@otrosDiagnosticos)"}}
        {{set _diagnostico="=_.pluck(base.diagnostico, '_name').join(', ')"}}
      {{/update}}
    {{/onChange}}
  {{/section}}
{{/define}}
