{{#define id="notaSolicitudReclamo"}}
  {{#action id="afectar"}}
    {{#update section="base"}}
      {{setRef ref="reclamo.base.vencimiento" value="=calc.dueDate(reclamo.base.vencimiento, 'atencion', calc.dueTimes('reclamo', reclamo.base.subTipoSolicitud, reclamo.base.motivo, reclamo.base.momentoDieta, reclamo.base.criticidadZona, reclamo.base.tiempos))"}}
      {{setRef ref="reclamo.base.alerta"      value="=calc.alertDate(reclamo.base.vencimiento, 'atencion', calc.dueTimes('reclamo', reclamo.base.subTipoSolicitud, reclamo.base.motivo, reclamo.base.momentoDieta, reclamo.base.criticidadZona, reclamo.base.tiempos))"}}
    {{/update}}
  {{/action}}
  {{#grid id="adjuntos" section="adjuntos" allowRemove="true" allowSort="true" sortBy="orden, fecha"}}
    {{column field="nombre" width="350"}}
    {{column field="tipo" width="200"}}
    {{column field="fecha" width="100" readOnly="true"}}
    {{column field="ext" width="100" readOnly="true"}}
    {{column field="tamano" width="100" readOnly="true"}}
    {{column field="orden" width="60"}}
  {{/grid}}
{{/define}}