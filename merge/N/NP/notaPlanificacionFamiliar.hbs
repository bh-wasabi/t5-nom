{{#define id="notaPlanificacionFamiliar"}}
  {{#action 
    id="afectar"
    error="=fn('validarNotaPlanificacionFamiliarProcesar',_doc)"
    confirm="=calc.in('SI', _.union(calc.pluckRef([base.afeccionPrincipal], 'base.excedeLimiteEdad'),calc.pluckRef(base.otrosDiagnosticos, 'base.excedeLimiteEdad'),calc.pluckRef([base.afeccionPrincipal], 'base.excedeLimiteSexo'),calc.pluckRef(base.otrosDiagnosticos, 'base.excedeLimiteSexo')))"
    confirmMessage="Diagnóstico Excede Límite Edad<br>¿Desea continuar?"
  }}
    {{#update section="base"}}
      {{set excedeLimiteEdad="=calc.in('SI', _.union(calc.pluckRef([base.afeccionPrincipal], 'base.excedeLimiteEdad'),calc.pluckRef(base.otrosDiagnosticos, 'base.excedeLimiteEdad')))?'SI':'NO'"}}
      {{set excedeLimiteSexo="=calc.in('SI', _.union(calc.pluckRef([base.afeccionPrincipal], 'base.excedeLimiteSexo'),calc.pluckRef(base.otrosDiagnosticos, 'base.excedeLimiteSexo')))?'SI':'NO'"}}
    {{/update}}
  {{/action}}

  {{#section id="base"}}
    {{#onChange}}
      {{#update}}
        {{set diagnostico="=calc.mergeArrays(@afeccionPrincipal,@otrosDiagnosticos)"}}
        {{set _diagnostico="=_.pluck(base.diagnostico, '_name').join(', ')"}}
      {{/update}}
    {{/onChange}}
  {{/section}}
  
  {{#section id="metodos"}}
    {{#field id="puerperaAceptaFamiliar"}}
      {{onChange clearFields="revisionColocacionMetodoQuirurgico,puerperaMetodoPlanificacion,numeroCicloEntregadosOral,numeroCiclosEntregadosInyectableMensual,numeroCiclosEntregadosInyectableBimestral,numeroCiclosEntregadosInyectableTrimestral,implanteSubdermico,implanteSubdermico2,numeroCiclosEntregadosParcheDermico,diu,diuMedicado"}}
    {{/field}}
    {{#field id="revisionColocacionMetodoQuirurgico"}}
      {{onChange clearFields="puerperaMetodoPlanificacion,numeroCicloEntregadosOral,numeroCiclosEntregadosInyectableMensual,numeroCiclosEntregadosInyectableBimestral,numeroCiclosEntregadosInyectableTrimestral,implanteSubdermico,numeroCiclosEntregadosParcheDermico,diu,diuMedicado,numeroPerservativosEntregados,numeroPerservativosEntregadosFemeninos,numeroOtrosMetodosEntregados,seEntregoAnticoncepcionEmergencia,altaAzoospermia"}}
    {{/field}}
    {{#field id="puerperaMetodoPlanificacion"}}
      {{onChange clearFields="numeroCicloEntregadosOral,numeroCiclosEntregadosInyectableMensual,numeroCiclosEntregadosInyectableBimestral,numeroCiclosEntregadosInyectableTrimestral,implanteSubdermico,implanteSubdermico2,numeroCiclosEntregadosParcheDermico,diu,diuMedicado"}}
    {{/field}}
  {{/section}}

  {{#section id="condicion"}}
    {{#field id="solicitaTelemedicina"}}
      {{onChange clearFields="solicitaTeleconsulta,estudiosTeleconsulta,modalidad"}}
    {{/field}}
    {{#field id="solicitaTeleconsulta"}}
      {{#onChange}}
        {{set modalidad="=@solicitaTeleconsulta=='si'?'Tiempo Real':''"}}
        {{set modalidad="=@solicitaTeleconsulta=='no'&&calc.isNotEmpty(estudiosTeleconsulta)?'Diferida':modalidad"}}
        {{set modalidad="=@solicitaTeleconsulta=='no'&&calc.in(estudiosTeleconsulta,['noAplica'])?'No Aplica':modalidad"}}
      {{/onChange}}
    {{/field}}
    {{#field id="estudiosTeleconsulta"}}
      {{#onChange}}
        {{set modalidad="=@solicitaTeleconsulta=='si'?'Tiempo Real':''"}}
        {{set modalidad="=@solicitaTeleconsulta=='no'&&calc.isNotEmpty(estudiosTeleconsulta)?'Diferida':modalidad"}}
        {{set modalidad="=@solicitaTeleconsulta=='no'&&calc.in(estudiosTeleconsulta,['noAplica'])?'No Aplica':modalidad"}}
      {{/onChange}}
    {{/field}}
    {{#field id="contrarreferido"}}
      {{onChange clearFields="referidoPor"}}
    {{/field}}
  {{/section}}
{{/define}}