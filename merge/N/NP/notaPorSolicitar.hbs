{{#define id="notaPorSolicitar"}}
  {{param attribute1="=_created.service"}}
  {{param startOnOpen="aplicacion"}}
  {{param removeIfEmptySection="aplicacion"}}
  {{param removeIfEmptyField="cantidad"}}

  {{#section id="aplicacion"}}
    {{#field id="loteEspecifico"}}
      {{#editor type="select" source="mov" view="loteEspecifico" alwaysLoad="true" sendSearchValue="true" value="lote" display="loteVencimiento"}}
        {{param codigo="=codigo"}}
      {{/editor}}
    {{/field}}
  {{/section}}
  
  {{#grid id="aplicacion" section="aplicacion" keyField="cantidad" disableEnter="true" applyTo="cantidad" applySuggest="sugerido" applyFilter="_persona"}}   {{!-- applyValidate="true" --}}
    {{column field="codigo" width="150" readOnly="true"}}
    {{column field="_name" width="350" readOnly="true"}}
    {{column field="_persona" width="180" readOnly="true"}}
    {{column field="central" width="280" readOnly="true"}}
    {{!-- {{column field="cama" width="70" readOnly="true"}} --}}
    {{column field="_unidad" label="Unidad" width="80" readOnly="true"}}
    {{column field="factor" label="Factor" width="50" readOnly="true"}}
    {{column field="sugerido" label="Sugerido" type="numeric" format="#," width="70" readOnly="true"}}
    {{column field="cantidad" label="Cantidad" type="numeric" format="#," width="70" validateExcess="sugerido"}}
    {{column field="loteEspecifico" label="Lote Especifico" width="150"}}
  {{/grid}}
{{/define}}
