{{#define id="notaPorUtilizar"}}
  {{param attribute1="=_created.service"}}
  {{param startOnOpen="aplicacion"}}
  {{param removeIfEmptySection="aplicacion"}}
  {{param removeIfEmptyField="utilizado"}}
    
  {{#grid id="aplicacion" section="aplicacion" keyField="utilizado" applyTo="utilizado" applySuggest="pendiente" applyValidate="true"}}
    {{column field="fecha" type="date" format="DD/MMM/YYYY" width="100" readOnly="true"}}
    {{column field="solicitud" type="text" width="180" readOnly="true"}}
    {{column field="_name" width="300" readOnly="true"}}
    {{column field="central" width="180" readOnly="true"}}
    {{column field="cama" width="70" readOnly="true"}}
    {{!-- {{column field="_persona" width="180" readOnly="true"}} --}}
    {{column field="solicitado" label="Solicitado" format="#," width="70" readOnly="true"}}
    {{column field="faltante" label="Faltante" type="numeric" format="#," width="60" readOnly="true"}}
    {{column field="pendiente" label="Pendiente" type="numeric" format="#," width="70" readOnly="true"}}
    {{column field="utilizado" label="Utilizado" type="numeric" format="#," width="70" validateInteger="true"}}
  {{/grid}}

  {{!-- {{#transform id="copiarCancelacion" treatment="costo"}}
    {{update section="persona" value="persona"}}
    {{update section="contexto" value="contexto"}}
    {{update section="base" value="base"}}
    {{update section="aplicacion" value="aplicacion"}}
  {{/transform}}

  {{action id="tool" condition="true" userRole="cancelacionUtilizacion" source="notaPorCancelarUtilizado" label="Cancelar" transform="copiarCancelacion" type="add-subdoc" visibleMode="close" color="grey" onlyPost="true"}} --}}
{{/define}}
