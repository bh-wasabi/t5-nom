{{#define id="notaPlanAltaEnfermeria"}}
  {{action
    id="afectar"
    error="=fn('validarNotaPlanAltaEnfermeriaProcesar',base,sugerirMedicamentosMinistrados)"
  }}
  {{#section id="base"}}
    {{#field id="medicamentosMinistrados"}}
      {{#editor display="base.medicamento.base.seleccionarSubclave"}}
        {{param persona="=persona.id"}}
      {{/editor}}
    {{/field}}
    {{validator type="expr" notValidIf="=calc.arrayLength(@medicamentosMinistrados)>6" message="No puede haber m√°s de 6 medicamentos ministrados."}}
  {{/section}}

  {{#view id="buscarPlanAltaEnfermeria"}}
    {{#find limit="-1"}}
      {{include field="base"}}
      {{sort field="_created.date" direction="desc"}}
      {{filter field="_created.request" eq="=request"}}
    {{/find}}
  {{/view}}
{{/define}}