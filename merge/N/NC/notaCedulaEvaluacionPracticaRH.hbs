{{#define id="notaCedulaEvaluacionPracticaRH"}}
  {{#action id="verPuesto" hide="true" type="sub-link"}}
    {{#link href="='/puesto/ver'" name="=base.solicitud.info.base._puesto" title="='Ver Puesto'"}}
      {{param puestoId="=base.solicitud.info.base.puesto"}}
    {{/link}}
  {{/action}}
  {{#action id="verEvaluaciones" hide="true" type="sub-link"}}
    {{#link href="='/nota/lista'" name="=calc.concat('Evaluaciones', persona.nombreCompleto)" title="='Evaluaciones'"}}
      {{param id="=persona.id"}}
      {{param tipo="='notaEvaluacion'"}}
    {{/link}}
  {{/action}}
  {{#section id="criterios"}}
    {{#onChange}}
      {{#update section="base"}}
        {{set calificacion="=calc.sumExpr(criterios, '=(criterio)?desempeno:0')"}}
        {{set dictamen="=calc.sumExpr(criterios, '=(criterio)?desempeno:0')>=30?'aceptado':'rechazado'"}}
      {{/update}}
    {{/onChange}}
  {{/section}}
  {{#grid id="criterios" section="criterios" disableEnter="true"}}
    {{column field="criterio" width="250" readOnly="true"}}
    {{column field="descripcion" width="750" readOnly="true"}}
    {{column field="desempeno" width="100"}}
  {{/grid}}
{{/define}}