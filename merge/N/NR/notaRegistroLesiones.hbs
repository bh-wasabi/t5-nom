{{#define id="notaRegistroLesiones"}}
  {{!-- Tarea 2438 --}}
  {{#section id="base"}}
  	{{#onChange}}
  		{{#update}}
  			{{set cantidadAfectacionesTratadas="=afectacionesTratadas.length"}}
  		{{/update}}
  	{{/onChange}}
