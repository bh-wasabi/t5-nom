{{#markup}}  
  {{#template id="verAdjunto"}}
    <div class="list-material">
      <li class="has-action-left">
        <div class="list-action-left"><i class="icon ion-{{flujo.icono}} text-{{flujo.color}}"></i></div>
        <div class="list-content">
          <span class="title">{{_name}}</span>
          <span style="font-size:12px;">{{nota.name}}</span>
          <span style="font-size:12px;float:right">{{date adjunto.fecha "DD/MMM/YYYY hh:mma"}}</span>
        </div>          
      </li>
    </div>
  {{/template}}  
{{/markup}}