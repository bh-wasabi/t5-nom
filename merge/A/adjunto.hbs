{{#define id="adjunto"}}
  {{#view id="lista"}}
    {{#find}}
      {{include field="_name"}}
      {{include field="nota"}}
      {{include field="adjunto.fecha"}}
      {{!-- {{sort field="_id" direction="desc"}} --}}
      {{search field="_name"}}
      {{search field="nota.name"}}
      {{!-- {{filter field="adjunto.fecha" gt="=moment().add(-dias,'d').format('YYYY-MM-DD')"}} --}}
    {{/find}}
  {{/view}}
  
  {{#browser id="lista" view="lista" showDoc="true" docOrientation="vertical" docPosition="75%" zoom="80%" color="green" docId="=nota.id" docType="=nota.type"}}
    {{list itemTemplate="verAdjunto" allowSearch="true" allowRefresh="true"}}
  {{/browser}}

