{{#define id="signosVitalesSis"}}
  {{#section id="base"}}
    {{!-- como el nombre se calcula antes, hay que agregar este campo en el excel --}}
    {{field id="estaVivo" type="expr" value="=situacionActual=='vivo'"}}
    {{field id="estaDifunto" type="expr" value="=situacionActual=='difunto'"}}
    {{field id="pam" type="calc" label="PMA" value="=fn('pam', base)" format="#.##"}}
    {{validator type="expr" validIf="=@temperaturaCorporal==0||(@temperaturaCorporal>=30&&@temperaturaCorporal<=44)" message="Temperatura Incorrecta"}}
    {{validator type="expr" validIf="=@tensionSistolica>=0&&@tensionSistolica<=300" message="Presión Sistólica Incorrecta"}}
    {{validator type="expr" validIf="=@tensionDiastolica>=0&&@tensionDiastolica<=300" message="Presión Diastólica Incorrecta"}}
    {{validator type="expr" validIf="=@frecuenciaCardiaca==0||(@frecuenciaCardiaca>=40&&@frecuenciaCardiaca<=220)" message="Frecuencia Cardíaca Incorrecta"}}
    {{validator type="expr" validIf="=@frecuenciaRespiratoria==0||(@frecuenciaRespiratoria>=10&&@frecuenciaRespiratoria<=99)" message="Frecuencia Respiratoria Incorrecta"}}
    {{validator type="expr" validIf="=@saturacionOxigeno>=0&&@saturacionOxigeno<=100" message="Saturación Oxigeno Incorrecta"}} {{!--cambio RACC  --}}
    {{!-- 9 Feb 2024 --}}
    {{validator type="expr" validIf="=(@tensionDiastolica>0&&@tensionSistolica>=50)||(@tensionSistolica==0&&@tensionDiastolica==0)" message="Presión Sistólica Fuera de Rango"}}
    {{validator type="expr" validIf="=(@tensionSistolica>=@tensionDiastolica)||(@tensionSistolica==0&&@tensionDiastolica==0)" message="Presión Sistólica Fuera de Rango 2"}} 
    {{validator type="expr" validIf="=(@tensionSistolica>0&&(@tensionDiastolica>=20&&@tensionDiastolica<=200))||(@tensionSistolica==0&&@tensionDiastolica==0)" message="Presión Diastólica Fuera de Rango"}}
    {{validator type="expr" validIf="=@tensionDiastolica<=@tensionSistolica" message="Presión Diastólica Fuera de Rango 2"}}
    {{validator type="expr" validIf="=@tomaGlicemiaCapilar=='no'||(@glicemiaCapilar>=20&&@glicemiaCapilar<=999)" message="Glicemia Capilar Incorrecta"}}
    {{validator type="expr" validIf="=@tomaGlicemiaCapilar=='no'||(@glicemiaCapilar>0&&@resultadoObtenido!='')" message="Seleccione un resultado"}}
  {{/section}}
{{/define}}